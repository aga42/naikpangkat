<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/cardView"
    android:layout_marginLeft="@dimen/padding_16" android:layout_marginTop="@dimen/padding_8"
    android:layout_marginRight="@dimen/padding_16" android:layout_marginBottom="@dimen/padding_8"
    android:foreground="?android:selectableItemBackground">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_height"
            android:src="@drawable/img_dummy"
            android:scaleType="fitXY"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMask"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/txt_misi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Misi"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_22"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_marginRight="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_8"
                android:layout_marginBottom="@dimen/padding_8"/>

            <TextView
                android:id="@+id/txt_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 Exp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_16"
                android:layout_marginBottom="@dimen/padding_8"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txt_misi"/>

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Hari lagi"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_16"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/padding_8"
                android:layout_marginRight="@dimen/padding_16"
                />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>