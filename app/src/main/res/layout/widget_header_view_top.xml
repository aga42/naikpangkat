<?xml version="1.0" encoding="utf-8"?>
<com.barethitam.naikpangkat.view.widget.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_misi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="62dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_view_end_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="1"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="3000 Exp"
            android:layout_marginRight="64dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_view_end_text_size_smaller"
            android:textStyle="bold"
            />

    </LinearLayout>
</com.barethitam.naikpangkat.view.widget.HeaderView>